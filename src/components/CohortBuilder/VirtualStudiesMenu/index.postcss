.virtual-studies-save-as {
  & .button-icon {
    margin-top: -2px;
  }
  & .button-text {
    margin-left: 5px;
  }
}

.virtual-studies-new {
  & .button-text {
    margin-left: 5px;
  }
}

.virtual-studies-delete {
  & .button-icon {
    margin-top: -2px;
  }
}
